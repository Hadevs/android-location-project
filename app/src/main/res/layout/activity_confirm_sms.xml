<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fcfeff">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:editable="false"
        android:gravity="center_vertical|center_horizontal"
        android:text="РЕГИСТРАЦИЯ"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:fontFamily="@font/roboto_medium"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:editable="false"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical|center_horizontal"
        android:text="Введите полученный код из СМС-сообщения"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:typeface="normal" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/back_border"
        android:ems="10"
        android:hint="@string/phoneplaceholder"
        android:inputType="phone"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/default_button"
        android:text="@string/confirm"
        android:textColor="#fff"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:background="@color/lightGray"
        android:orientation="vertical">

        <EditText
            android:id="@+id/smsEditText"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/back_border"
            android:ems="10"
            android:hint="@string/phoneplaceholder"
            android:inputType="phone"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp" />

        <Button
            android:id="@+id/confirmSMSButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/default_button"
            android:text="@string/smsAgainConfirm"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>


    </LinearLayout>